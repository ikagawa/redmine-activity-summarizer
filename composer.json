{
    "name": "redmine/activity-summarizer",
    "description": "Summarizes Redmine activities using Gemini 2.5 and posts them back to Redmine",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "google/cloud-ai-platform": "^0.30.0",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "kbsali/redmine-api": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "RedmineSummarizer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
